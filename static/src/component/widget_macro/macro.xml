<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="macro_template" owl="1">
        <div class="macro_form mb-5">
            <div class="macro_dim">
                <t t-foreach="props.record.data.quadrant_ids.records" t-as="quad" t-key="quad.id">
                    <div class="quad_dim bg-dark" t-att-style="getQuadStyle(quad.data)">
                        <t t-foreach="quad.data.hex_ids.records" t-as="hex" t-key="hex.id">
                            <!-- INFO-: Arrivati qui Hex non ha più alcuna proprietà per poter proseguire.-->
                            <div class="hex hex_dim hv-center" t-esc="hex.data.name" t-att-style="getHexStyle(hex.data)"/>
                        </t>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>