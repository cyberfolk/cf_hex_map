<odoo>
    <record id="hex_macro_view_tree" model="ir.ui.view">
        <field name="name">hex.macro.tree</field>
        <field name="model">hex.macro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hex_macro_view_form" model="ir.ui.view">
        <field name="name">hex.macro.form</field>
        <field name="model">hex.macro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="tmp" widget="macro" nolabel="1"/>
                    <field name="quadrant_ids" /> <!-- INFO-: Fondamentale per il Widget macro, altrimenti crolla tutto. -->
                </sheet>
            </form>
        </field>
    </record>
</odoo>