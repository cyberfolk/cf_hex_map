<odoo>
    <record id="hex_quad_view_tree" model="ir.ui.view">
        <field name="name">hex.quad.tree</field>
        <field name="model">hex.quad</field>
        <field name="arch" type="xml">
            <tree edit="0" delete="0" create="0">
                <field name="name"/>
                <field name="code"/>
                <field name="index" readonly="1"/>
                <field name="circle_order"/>
                <field name="circle_number"/>
                <field name="color" readonly="1"/>
                <field name="macro_id"/>
            </tree>
        </field>
    </record>

    <record id="hex_quad_view_form" model="ir.ui.view">
        <field name="name">hex.quad.form</field>
        <field name="model">hex.quad</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <!-- Inserire il componente OWL utilizzando la direttiva t-component -->
                            <field name="name" position="after">
                                <div class="o_field_widget">
                                    <t t-component="mio_modulo.NomeComponente"/>
                                </div>
                            </field>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="index" readonly="1"/>
                            <field name="circle_order"/>
                            <field name="circle_number"/>
                            <field name="color" readonly="1"/>
                            <field name="macro_id" readonly="1"/>
                            <field name="polygon" readonly="1" />
                            <field name="hex_list" readonly="1" />
                        </group>
                    </group>
                    <group colspan="1" string="Hexes" name="quad_hex_ids">
                        <field colspan="2" nolabel="1" name="hex_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>